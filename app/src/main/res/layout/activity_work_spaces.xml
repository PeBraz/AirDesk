<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WorkSpacesActivity"
    android:id="@+id/spaces"
    style="@style/Base.Theme.AppCompat">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Workspaces"
        android:id="@+id/textView4"
        style="@style/Widget.AppCompat.PopupMenu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New workspace"
        android:id="@+id/new_workspace_button"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/my_workspaces"
        android:layout_alignEnd="@+id/my_workspaces"
        android:layout_alignLeft="@+id/my_workspaces"
        android:layout_alignStart="@+id/my_workspaces" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My workspaces"
        android:id="@+id/my_workspaces"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/new_workspace_button"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foreign workspaces"
        android:id="@+id/button2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/my_workspaces"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignTop="@+id/new_workspace_button"
        android:layout_alignParentLeft="true"
        android:id="@+id/popup"
        android:layout_alignParentStart="true">

    </FrameLayout>
</RelativeLayout>
